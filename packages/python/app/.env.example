# MozaiksAI Runtime Environment Configuration
# Copy this to .env and fill in your values

# ============================================================================
# APP IDENTITY (Required)
# ============================================================================
MOZAIKS_APP_ID=dev_app
ENV=development

# ============================================================================
# AUTHENTICATION
# ============================================================================
# local = Use simple JWT with local secret (dev mode)
# external = Use external IdP (production)
MOZAIKS_AUTH_MODE=local

# Secret key for JWT signing (generate a secure random string for production)
SECRET_KEY=dev-secret-key-change-in-production-use-32-chars-min

# JWT Algorithm
ALGORITHM=HS256

# ============================================================================
# DATABASE
# ============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/mozaiks_dev

# ============================================================================
# AI/LLM CONFIGURATION (Required for AI features)
# ============================================================================
# OpenAI API Key - get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Model to use (optional, defaults to gpt-4-turbo)
OPENAI_MODEL=gpt-4-turbo

# ============================================================================
# RUNTIME CONFIGURATION
# ============================================================================
# Port for the FastAPI server
PORT=8080

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Additional CORS origins (comma-separated)
ADDITIONAL_CORS_ORIGINS=

# ============================================================================
# PACK/WORKFLOW CONFIGURATION
# ============================================================================
# Path to workflow packs directory
MOZAIKS_PACKS_DIR=../../mozaiks-platform/ai-models

# Path to capability specs (relative to config dir or absolute)
MOZAIKS_AI_CAPABILITY_SPECS_DIR=capability_specs

# ============================================================================
# RUNTIME UI/API URLS (for ChatUI integration)
# ============================================================================
# Base URL for runtime API calls
RUNTIME_BASE_URL=http://localhost:8080

# Base URL for ChatUI (if different from API)
MOZAIKS_RUNTIME_UI_BASE_URL=http://localhost:3000

# ChatUI URL template
MOZAIKS_CHATUI_URL_TEMPLATE={runtime_ui_base_url}/chat?app_id={app_id}&chat_id={chat_id}&token={token}

# ============================================================================
# PLATFORM INTEGRATION (for backend tool calls)
# ============================================================================
# Platform gateway URL
PLATFORM_GATEWAY_URL=http://localhost:8010

# ============================================================================
# MONETIZATION (Optional)
# ============================================================================
# Enable monetization features (0 = disabled, 1 = enabled)
MONETIZATION=0

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable debug logging
DEBUG=true

# Enable hot reload
RELOAD=true
