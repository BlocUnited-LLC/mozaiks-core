# ============================================
# MozaiksCore Environment Configuration
# Copy this to .env and fill in your values
# ============================================

# ---- AI Runtime ----
OPENAI_API_KEY=sk-your-openai-key

# ---- Stripe (Billing.API) ----
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ---- JWT Configuration ----
JWT_SECRET=your-256-bit-secret-key-here

# ---- MongoDB ----
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=MozaiksDB

# ---- Redis ----
REDIS_CONNECTION=localhost:6379

# ---- RabbitMQ ----
RABBITMQ_HOST=localhost
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# ---- FalkorDB ----
# Set to true to use the async FalkorDB client
FALKORDB_ASYNC=false
FALKORDB_HOST=localhost
FALKORDB_PORT=6380
FALKORDB_PASSWORD=

# ---- Keycloak (for app-user auth in self-hosted instances) ----
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=mozaiks
KEYCLOAK_CLIENT_ID=mozaiks-app

# ---- SendGrid (optional, for emails) ----
SENDGRID_API_KEY=

# ---- Azure Blob (optional, for file storage) ----
AZURE_STORAGE_CONNECTION_STRING=

# SendGrid Email Configuration
SENDGRID_API_KEY=SG.your-api-key-here
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name
